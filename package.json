{
  "name": "mhcms",
  "version": "0.2.0",
  "description": "Minimal Headless Content Management System",
  
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/types/index.d.ts",
  "files": [
    "./dist/**/*"
  ],
  
  "scripts": {
    "clean": "rm -rf ./dist",
    "prepare": "npm run test && npm run build",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./deploy-config/tsconfig.esm.json",
    "build:cjs": "tsc -p ./deploy-config/tsconfig.cjs.json",
    "test": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trouve-antoine/mhcms.git"
  },
  "keywords": [
    "cms"
  ],
  "author": "Antoine Trouv√©",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trouve-antoine/mhcms/issues"
  },
  "homepage": "https://github.com/trouve-antoine/mhcms#readme",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.9",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "yaml": "^2.3.1"
  },
  "peerDependencies": {
    "io-ts": "^2.2.20",
    "@aws-sdk/client-s3": "^3.388.0"
  }
}
